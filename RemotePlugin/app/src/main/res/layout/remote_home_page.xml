<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@mipmap/remote_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px10dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/px88dp"
            android:text="RemotePlugin"
            android:textColor="@color/card_color"
            android:textSize="@dimen/px32sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_remote_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote Page!"
        android:layout_centerInParent="true"
        android:textColor="@color/second_content_color" />


    <TextView
        android:id="@+id/remote_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户信息!"
        android:layout_marginTop="@dimen/px20dp"
        android:layout_below="@+id/tv_remote_page"
        android:textColor="@color/second_content_color"
        android:layout_centerInParent="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/card_color"
        android:padding="@dimen/px10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_go_change_userInfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="@dimen/px88dp"
            android:background="@color/global_color"
            android:layout_marginRight="@dimen/px20dp"
            android:text="修改用户信息页"
            android:textColor="@color/card_color"
            android:textSize="@dimen/px32sp" />

        <Button
            android:id="@+id/btn_quest_premission"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="@dimen/px88dp"
            android:layout_marginLeft="@dimen/px20dp"
            android:background="@color/global_color"
            android:text="修改用户图像"
            android:textColor="@color/card_color"
            android:textSize="@dimen/px32sp" />

    </LinearLayout>



</RelativeLayout>